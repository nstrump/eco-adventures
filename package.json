{
  "name": "eco-adventures",
  "version": "1.0.0",
  "description": "Brochure site for ecotourist venture.",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nstrump/eco-adventures.git"
  },
  "author": "Nathan Trump",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nstrump/eco-adventures/issues"
  },
  "homepage": "https://github.com/nstrump/eco-adventures#readme",
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "concat": "^1.0.3",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.0.0"
  },
  "dependencies": {
    "@glidejs/glide": "^3.4.1"
  }
}
